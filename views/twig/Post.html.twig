<div class="container-fluid d-flex flex-column align-items-center bg-light pb-5">
    {% if msg == 1 %}
        <div class="alert alert-success mt-3 mb-3" role="alert">
            Commentaire ajout√© !
        </div>
    {% elseif msg %}
        <div class="alert alert-danger mt-3 mb-3" role="alert">
            Erreur lors de l'ajout du commentaire
        </div>
    {% endif %}
    <div class="blocPost d-flex">
        <div class="leftBlocPost d-flex flex-column align-items-center bgLightDark pb-5">
            <h2 class="mt-5">{{ post.titre }}</h2>
            <h5 class="mb-3">{{ post.chapo }}</h5>
            <hr class="hrPost">
            <div class="blocImg d-flex align-items-center justify-content-center mt-4">
                <img class="imgPost" src="./ressources/img/{{post.image}}" alt="">
            </div>
        </div>
        <div class="rightBlocPost mt-5 d-flex flex-column align-items-center justify-content-between">
            <div class="descriptionPost  d-flex flex-column align-items-center">
                <h3>Description : </h3>
                <p class="mt-3">{{ post.contenu }}</p>
            </div>
            <div class="botPost d-flex flex-row justify-content-between">
                <p class="ms-5"></p>
                <p class="datePost m-0">{{ post.date_maj|date("d/m/Y") }}</p>
                <a href="" class="me-4 text-primary">Administrer</a>
            </div>
        </div>
    </div>
    

    <div class="bottomBlocPost pb-5">
        <div class="blocCommentaires d-flex flex-column  align-items-center">

            
            <h1 class="mb-4 mt-5 text-white">Commentaires :</h1>

            <div class="addCommentaire">

                <form action="" method="post">
                    {% if comment == 'error' %}
                        <span class="badge bg-danger">Veuillez renseiger un commentaire</span>
                    {% endif %}
                    <div class="form-group">
                        <textarea name="commentaire" class="form-control" cols="130" rows="5" placeholder="Votre commentaire"></textarea>
                    </div>
                    <div class="form-group mt-2">
                        <button class="btn btn-light" type="submit">Envoyer</button>
                    </div>
                </form>
                
            </div>

        </div>
    </div>

</div>